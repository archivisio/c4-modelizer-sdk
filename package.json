{
  "name": "c4-modelizer-sdk",
  "version": "1.0.0",
  "description": "SDK partagé pour les applications C4 Modelizer - Types, store Zustand et hooks réutilisables",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "eth3rnit3",
  "license": "CC-BY-NC-4.0",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.esm.js",
      "require": "./dist/core/index.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.esm.js",
      "require": "./dist/ui/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "c4",
    "architecture",
    "modeling",
    "sdk",
    "zustand",
    "react",
    "typescript"
  ],
  "scripts": {
    "build": "tsc -b && vite build",
    "dev": "vite build --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "publish:github": "npm run prepublishOnly && npm publish --registry=https://npm.pkg.github.com",
    "pack:check": "npm pack --dry-run"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.3"
  },
  "dependencies": {
    "@xyflow/react": "^12.6.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "typescript": "~5.7.2",
    "vite": "^6.3.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14"
  }
}
